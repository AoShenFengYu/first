<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:background="#000000"
        android:id="@+id/gifpick_img"/>
    
    <com.qisiemoji.apksticker.whatsapp.crop.GifPickImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/gifpick_img"
        android:scaleType="fitXY"
        android:background="#000000"
        android:id="@+id/gifpick_crop_img"/>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/gifpick_crop_img"
        android:id="@+id/gifpick_recycleview"
        android:layout_width="match_parent"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="50dp"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/gifpick_add"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="ADD TO GROUP"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="#88dc98"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:id="@+id/gifpick_func_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/gifpick_add">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more"
            android:layout_centerVertical="true"
            android:id="@+id/gifpick_recovery"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/gifpick_recovery"
            android:id="@+id/gifpick_add_text"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/gifpick_add_text"
            android:id="@+id/gifpick_random_text"/>

    </RelativeLayout>
</RelativeLayout>
