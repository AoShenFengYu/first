<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kika_sticker_app_bg_dialog">

    <!--<ImageView-->
        <!--android:id="@+id/dialog_bg"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="140dp"-->
        <!--android:scaleType="fitXY"-->
        <!--android:src="@drawable/kika_sticker_app_bg_banner_02"/>-->

    <ImageView
        android:id="@+id/dialog_ic"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:src="@drawable/kika_sticker_app_ic_kika_02"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/dialog_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/kika_sticker_app_ic_ad"/>

    <ImageView
        android:id="@+id/dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kika_sticker_app_ic_close"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dialog_ic"
        android:textColor="#666666"
        android:text="Activate Kika Keyboard to unlock" />

    <TextView
        android:id="@+id/dialog_btn"
        android:layout_below="@id/dialog_title"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="DOWNLOAD"
        android:background="@drawable/kika_sticker_app_bt_green"
        android:textSize="14sp"/>
</RelativeLayout>