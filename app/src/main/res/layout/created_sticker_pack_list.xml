<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_sticker_pack_list">

    <RelativeLayout
        android:id="@+id/create_pack_content"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/gif_create_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_more"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/create_pack"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/gif_create_add"
            android:text="Create a new stickerpack for WhatsApp"
            android:textColor="#58bb7c"
            android:textSize="20sp"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/disable_color"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/sticker_pack_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/create_pack_content"/>

</RelativeLayout>
