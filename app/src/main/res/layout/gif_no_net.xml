<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:id="@+id/no_net_layout"
    android:background="@color/white">

    <TextView
        android:id="@+id/no_net_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_net"
        android:textColor="#e945a1"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/no_net_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gifkb_ic_connection"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/no_net_text"
        android:layout_marginBottom="@dimen/dp_10"/>

    <ImageView android:id="@+id/no_net_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gifkb_btn_renew_normal"
        android:layout_below="@id/no_net_text"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
